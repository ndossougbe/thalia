<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.lang.String?>
<GridPane fx:controller="thalia.desktop.MainMenuController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <Text text="%MAIN_MENU_TITLE" id="main-menu-title"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="3"/>

    <Text id="status_text"
          GridPane.columnIndex="0" GridPane.rowIndex="1"
          GridPane.columnSpan="3"/>

    <Button text="%SCAN_DIRECTORY_LABEL"
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            onAction="#handleScanDirectoryAction"/>

    <Button text="%MANUAL_INPUT_LABEL"
            GridPane.columnIndex="1" GridPane.rowIndex="2"
            onAction="#handleManualInputAction"/>

    <Button text="%SOMETHING_LABEL"
            GridPane.columnIndex="2" GridPane.rowIndex="2"
            onAction="#handleSomethingAction"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
    </HBox>

    <!--
        <Text fx:id="actiontarget"
              GridPane.columnIndex="0" GridPane.columnSpan="2"
              GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>
    -->

    <stylesheets>
        <String fx:value="views/main_menu.css"/>
    </stylesheets>

</GridPane>